<div class="friend-pic-link col-xs-4">
  <% if friend.profile.profile_photo_id %>
    <%= image_tag Photo.find(friend.profile.profile_photo_id).photo.url(:thumb) %><br>
  <% else %>
    <%= image_tag image_url('no_photo_thumbnail.jpg') %><br>
  <% end %>
  <%= link_to "#{full_name(friend)}", user_timeline_path(friend) %>
</div>
